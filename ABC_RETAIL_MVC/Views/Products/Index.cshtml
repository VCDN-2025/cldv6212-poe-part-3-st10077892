@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice.ToString("C")</td>
                <td>@product.Stock</td>
                <td>@product.ProductDescription</td>
                <td>
                    <a asp-controller="Cart"
                       asp-action="AddToCart"
                       asp-route-id="@product.ProductId"
                       asp-route-name="@product.ProductName"
                       asp-route-price="@product.ProductPrice"
                       asp-route-imageUrl="@product.ProductImageUrl"
                       class="btn btn-success">
                        Add to Cart
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
